<html>
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <title>Home</title>
    </head>
    <body>
        <div class="container">
            <div class="col-md-6 box">
                <h1>Here are all your collections:</h1>
                <ul>
                    {% for collection in collections %}
                        <li>{{ collection.getName }}</li>
                    {% endfor %}
                </ul>

                <form action="/collection" method="post">
                    <div class="form-group">
                        <label for="name">Enter a name for your collection:</label>
                        <input id="name" name="name" type="text">
                    </div>

                    <button type="submit" class="btn btn-success">Add your collection</button>
                </form>

                <form action="/delete_collections" method="post">
                    <button type="submit" class="btn btn-danger">Destroy all Entries</button>
                </form>
            </div>

            <div class="col-md-6 box">
                <h1>Here are all your items:</h1>
                <ul>
                    {% for item in items %}
                        <li>{{ item.getName }}</li>
                    {% endfor %}
                </ul>

                <form action="/item" method="post">
                    <div class="form-group">
                        <label for="name">Enter a name for your item:</label>
                        <input id="name" name="name" type="text">
                    </div>

                    <button type="submit" class="btn btn-success">Add your item</button>
                </form>

                <form action="/delete_items" method="post">
                    <button type="submit" class="btn btn-danger">Destroy all Entries</button>
                </form>
            </div>

            </div>

        </div>
    </body>
</html>
